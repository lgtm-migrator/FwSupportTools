#!/bin/sh

: ${DIST?} ${ARCH?}

PBUILDERDIR=${PBUILDERDIR:-$HOME/pbuilder}

DISTRIBUTION=$DIST
ARCHITECTURE=$ARCH

# Support multiple architectures
BASETGZ=$PBUILDERDIR/$DIST/$ARCH/base.tgz
BUILDPLACE=$PBUILDERDIR/$DIST/$ARCH/build/
BUILDRESULT=$PBUILDERDIR/$DIST/$ARCH/result/
APTCACHE=$PBUILDERDIR/$DIST/$ARCH/aptcache/

ALLOWUNTRUSTED=yes
HOOKDIR=$PBUILDERDIR/hooks

BUILDUSERID=1234
BUILDUSERNAME=pbuilder
PKGNAME_LOGFILE=yes
PKGNAME_LOGFILE_EXTENTION=_$ARCH.build # sic
